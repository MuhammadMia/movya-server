<h3 id="create-listing">MY LISTINGS</h3>

{{#each mylistings}}
<div class="true-body">
    <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="/uploads/{{car_photo}}">
              <span class="card-title">{{title}}</span>
            </div>
            <div class="card-content">
              <p>Listing created by {{host}}</p>
              <p><b>Dates Available</b></p>
              {{#each dates_available}}
              <p>{{this}}</p>
              {{/each}}
            </div>
            <div class="card-action">
              <a href="/listings/{{_id}}">View Full Listing</a>
            </div>
          </div>
        </div>
    </div>
</div>
{{/each}}


